@{
    ViewBag.Title = "AnyDoubts - Home";
}

@inherits System.Web.Mvc.WebViewPage<IList<AnyDoubts.Domain.Model.Question>>

<h2>@ViewBag.Message</h2>

@using (Html.BeginForm())
{ 
<p>    
    @Html.TextArea("question")
</p>
<p>
    <input type="submit" name="Send" id="send" value="Send" />
</p>
}

<h3>Lista de Perguntas</h3>
<ul>        
    @foreach(var q in Model) {
    <li>
        Pergunta: @Html.Label(q.Message)
    </li>
    }
</ul>


