@model AnyDoubts.Web.ViewModels.UserProfile
@{
    ViewBag.Title = "Index";    
}
<h2>
    Pergunte-me o que quiser</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{    
    <div style="background-color: #e8eef4">
        <br />
        <div class="editor-field">
            @Html.TextAreaFor(m => m.NewQuestion)
            @Html.ValidationMessageFor(m => m.NewQuestion)
        </div>
        <p>
            <input type="submit" value="Enviar" />
        </p>
    </div>
}
<p>@TempData["mensagem"]</p>
<hr />
<div>
    @Html.Partial("_Questions")
</div>
