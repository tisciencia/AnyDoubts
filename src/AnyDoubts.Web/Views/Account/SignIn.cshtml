@model AnyDoubts.Web.ViewModels.UserSignIn
@{
    ViewBag.Title = "SignIn";
}
<script src="@Url.Content("~/Scripts/jquery.watermark.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<h2>
    SignIn</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "A criação da conta não foi bem sucedida. Por favor, corrija os erros e tente novamente.")
    <div>
        <fieldset>
            <legend><b>Logar no AnyDoubts</b></legend>
            <br />
            <div>
                <i>Não é um usuário do AnyDoubts ainda? @Html.ActionLink("Clique aqui para se cadastrar.", "SignUp", "Account")</i>
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.Username)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Username)
                @Html.ValidationMessageFor(m => m.Username)
            </div>
            <i>@Html.ActionLink("Esqueceu o seu nome de usuário?", "RetrieveUsername", "Account")</i>
            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <i>@Html.ActionLink("Esqueceu a sua senha?", "ResetPassword", "Account")</i>
            <p>
                <input type="submit" value="Continuar" />
            </p>
        </fieldset>
    </div>
}